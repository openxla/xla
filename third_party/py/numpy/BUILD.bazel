load("@rules_cc//cc:cc_library.bzl", "cc_library")
load("@rules_python//python:pip.bzl", "whl_filegroup")

licenses(["restricted"])

package(default_visibility = ["//visibility:public"])

alias(
    name = "numpy",
    actual = "@pypi//numpy",
)

whl_filegroup(
    name = "numpy_includes",
    pattern = "numpy/_?core/include/numpy",
    whl = "@pypi//numpy:whl",
)

cc_library(
    name = "headers",
    hdrs = [":numpy_includes"],
    includes = [
        "numpy_includes/numpy/_core/include",
        "numpy_includes/numpy/core/include",
    ],
    deps = ["@rules_python//python/cc:current_py_cc_headers"],
)

genrule(
    name = "dummy",
    outs = ["tf_numpy_dummy.py"],
    cmd = "touch $@",
    visibility = ["//visibility:private"],
)
